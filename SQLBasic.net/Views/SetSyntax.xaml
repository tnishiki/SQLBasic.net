<Window x:Class="SQLBasic_net.Views.SetSyntax"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:SQLBasic_net.Views"
        mc:Ignorable="d"
        Title="フォントのカラーを設定" Height="450" Width="580"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        >
    <Grid Background="#2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="色セット" Foreground="White" VerticalAlignment="Bottom" Margin="5,0,5,0"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding SyntaxList}" DisplayMemberPath="Name" Margin="5" SelectedItem="{Binding SelectSyntaxItem}" SelectionChanged="SyntaxSelectionChanged"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="28"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="プレビュー" Foreground="White" VerticalAlignment="Bottom" Margin="5,0,5,0"/>
                <StackPanel Grid.Row="1" Margin="0,0,5,0" Background="#606060">
                    <avalonEdit:TextEditor 
                        x:Name="AEditor"
                        FontFamily="Consolas"
                        Background="{Binding BackGround}"
                        FontSize="20"
                        Document ="{Binding SampleText, Mode=TwoWay}"
                        Foreground="White"
                        SyntaxHighlighting="{Binding SyntaxSet}"
                        Height="220" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="選択中の色" Foreground="White" VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Center"/>
                        <cp:PortableColorPicker Grid.Column="0" Grid.Row="1" Width="80" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" ColorState="{Binding SelectColorPicker, Mode=TwoWay, Delay=10}"/>
                        <cp:ColorSliders Grid.Column="1" Grid.RowSpan="2" ShowAlpha="False" ColorState="{Binding SelectColorPicker, Mode=TwoWay, Delay=10}" ColorChanged="ColorPickerChanged" />
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="キャンセルする" Width="150" Height="30" Command="{Binding CancelCommand}" Foreground="White" Background="#2D2D30"/>
            <Button Grid.Column="1" Width="150" Height="30" Command="{Binding OKCommand}" Background="#2D2D30">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Foreground="#3CB371" FontWeight="Bold"/>
                    <TextBlock Text="設定した色を保存" Foreground="White" FontWeight="Bold"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
